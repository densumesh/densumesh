---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article>
    <section class="p-2 rounded">
      <h1 class="text-xl font-normal mb-2">{post.data.title}</h1>
      <div class="text-zinc-500 text-sm mb-2">
        {post.data.pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
        {post.data.tags.length > 0 && (
          <span> • {post.data.tags.join(', ')}</span>
        )}
      </div>
      <p class="italic"><em>{post.data.description}</em></p>
    </section>

      <hr class="border-zinc-700 my-4">

    <section class="p-2 rounded prose">
      <Content />
    </section>

    <section class="p-2 rounded">
      <a href="/blog" class="text-blue-400 hover:underline">← Back to blog</a>
    </section>
  </article>
</Layout>

<style>
  article {
    margin: 0 auto;
  }
  
  article .section {
    border: none;
    padding: var(--space-md) 0;
  }
  
  article h1 {
    font-size: 2rem;
    margin-bottom: var(--space-sm);
  }
</style>
